{
  "info": {
    "name": "EOMS API - Postman Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:8000" },
    { "key": "access_token", "value": "" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"user@example.com\",\n  \"password\": \"password\",\n  \"password_confirmation\": \"password\",\n  \"role\": \"customer\"\n}"
            },
            "url": { "raw": "{{base_url}}/api/v1/auth/register", "host": ["{{base_url}}"], "path": ["api","v1","auth","register"] }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"password\"\n}" },
            "url": { "raw": "{{base_url}}/api/v1/auth/login", "host": ["{{base_url}}"], "path": ["api","v1","auth","login"] }
          }
        },
        {
          "name": "Me",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{access_token}}" } ],
            "url": { "raw": "{{base_url}}/api/v1/auth/me", "host": ["{{base_url}}"], "path": ["api","v1","auth","me"] }
          }
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "List Products",
          "request": {
            "method": "GET",
            "url": { "raw": "{{base_url}}/api/v1/products", "host": ["{{base_url}}"], "path": ["api","v1","products"] }
          }
        },
        {
          "name": "Create Product",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{access_token}}" } ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"T-Shirt\",\n  \"sku\": \"TSHIRT-001\",\n  \"description\": \"100% cotton\",\n  \"price\": 19.99,\n  \"cost\": 8.5,\n  \"quantity\": 100,\n  \"low_stock_threshold\": 10,\n  \"is_active\": true\n}"
            },
            "url": { "raw": "{{base_url}}/api/v1/products", "host": ["{{base_url}}"], "path": ["api","v1","products"] }
          }
        },
        {
          "name": "Get Product",
          "request": {
            "method": "GET",
            "url": { "raw": "{{base_url}}/api/v1/products/10", "host": ["{{base_url}}"], "path": ["api","v1","products","10"] }
          }
        },
        {
          "name": "Search Products",
          "request": {
            "method": "GET",
            "url": { "raw": "{{base_url}}/api/v1/products/search?q=t-shirt", "host": ["{{base_url}}"], "path": ["api","v1","products","search"], "query": [ { "key": "q", "value": "t-shirt" } ] }
          }
        },
        {
          "name": "Low Stock",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{access_token}}" } ],
            "url": { "raw": "{{base_url}}/api/v1/products/low-stock?threshold=10", "host": ["{{base_url}}"], "path": ["api","v1","products","low-stock"], "query": [ { "key": "threshold", "value": "10" } ] }
          }
        }
        ,
        {
          "name": "Import Products (CSV)",
          "request": {
            "method": "POST",
            "header": [ { "key": "Authorization", "value": "Bearer {{access_token}}" } ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "product_import_sample.csv"
                }
              ]
            },
            "url": { "raw": "{{base_url}}/api/v1/products/import", "host": ["{{base_url}}"], "path": ["api","v1","products","import"] }
          }
        }
        ,
        {
          "name": "Get Import Status",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{access_token}}" } ],
            "url": { "raw": "{{base_url}}/api/v1/imports/123", "host": ["{{base_url}}"], "path": ["api","v1","imports","123"] }
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{access_token}}" } ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"items\": [\n    {\n      \"product_id\": 10,\n      \"product_variant_id\": null,\n      \"quantity\": 2,\n      \"price\": 19.99\n    }\n  ],\n  \"tax_amount\": 3.2,\n  \"shipping_amount\": 5.0\n}"
            },
            "url": { "raw": "{{base_url}}/api/v1/orders", "host": ["{{base_url}}"], "path": ["api","v1","orders"] }
          }
        },
        {
          "name": "List Orders",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{access_token}}" } ],
            "url": { "raw": "{{base_url}}/api/v1/orders", "host": ["{{base_url}}"], "path": ["api","v1","orders"] }
          }
        },
        {
          "name": "Get Order",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{access_token}}" } ],
            "url": { "raw": "{{base_url}}/api/v1/orders/100", "host": ["{{base_url}}"], "path": ["api","v1","orders","100"] }
          }
        },
        {
          "name": "Confirm Order",
          "request": {
            "method": "POST",
            "header": [ { "key": "Authorization", "value": "Bearer {{access_token}}" } ],
            "url": { "raw": "{{base_url}}/api/v1/orders/100/confirm", "host": ["{{base_url}}"], "path": ["api","v1","orders","100","confirm"] }
          }
        },
        {
          "name": "Cancel Order",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{access_token}}" } ],
            "body": { "mode": "raw", "raw": "{ \"reason\": \"Customer request\" }" },
            "url": { "raw": "{{base_url}}/api/v1/orders/100/cancel", "host": ["{{base_url}}"], "path": ["api","v1","orders","100","cancel"] }
          }
        },
        {
          "name": "Generate Invoice",
          "request": {
            "method": "POST",
            "header": [ { "key": "Authorization", "value": "Bearer {{access_token}}" } ],
            "url": { "raw": "{{base_url}}/api/v1/orders/100/invoice", "host": ["{{base_url}}"], "path": ["api","v1","orders","100","invoice"] }
          }
        }
      ]
    }
  ]
}
